---
const { title, url, date } = Astro.props;
---

<li class="pb-2">
  <a href={url} class="flex items-end font-medium">
    <time class="hidden lg:block pr-2"
      >{date.toLocaleDateString().replace(/\//g, "-")}:</time
    >
    <h3 class="hover:underline"><span class="lg:hidden"> - </span>{title}</h3>
  </a>
</li>
