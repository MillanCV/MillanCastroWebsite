---
import ThemeIcon from "./ThemeIcon.astro";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<nav
  class="py-2 lg:py-8 border-b border-secondary dark:border-darkSecondary/10 lg:border-nonegit
  font-medium text-base lg:text-xl text-secondary dark:text-darkSecondary"
>
  <div class="flex justify-between container px-3">
    <a href="/">Mill√°n Castro</a>

    <div class="flex items-center">
      <ul class="flex">
        <li>
          <a
            href="/"
            class={currentPath === ""
              ? "text-primary dark:text-darkPrimary"
              : ""}>Blog</a
          >
        </li>

        <li class="ml-5">
          <a
            href="/about/"
            class={currentPath === "about/"
              ? "text-primary dark:text-darkPrimary"
              : ""}>About</a
          >
        </li>
      </ul>
      <ThemeIcon />
    </div>
  </div>
</nav>
