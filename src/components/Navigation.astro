---
import ThemeIcon from "./ThemeIcon.astro";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<nav class="font-medium text-xl text-secondary dark:text-darkSecondary">
  <div class="flex justify-between container">
    <a href="/">Mill√°n Castro</a>

    <div class="flex items-center">
      <ul class="flex">
        <li>
          <a
            href="/"
            class={currentPath === ""
              ? "text-primary dark:text-darkPrimary"
              : ""}>Blog</a
          >
        </li>

        <li
          class="px-7 border-r-2 border-secondary dark:border-darkSecondary/50"
        >
          <a
            href="/about/"
            class={currentPath === "about/"
              ? "text-primary dark:text-darkPrimary"
              : ""}>About</a
          >
        </li>
      </ul>
      <ThemeIcon />
    </div>
  </div>
</nav>
