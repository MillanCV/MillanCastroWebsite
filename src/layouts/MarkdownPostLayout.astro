---
import Prose from "../components/Prose.astro";
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="container px-4">
    <div class="flex flex-col items-center mt-10 mb-12">
      <h1 class="text-center leading-snug">{frontmatter.title}</h1>
      <div class="text-sm font-medium text-secondary dark:text-darkSecondary">
        {frontmatter.pubDate.toLocaleDateString().replace(/\//g, "-")}
      </div>
    </div>

    <Prose>
      <slot />
    </Prose>
  </div>
</BaseLayout>
